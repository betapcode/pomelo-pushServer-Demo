<!DOCTYPE html>
<html>
<head>
    <% include ./common/pageHead %>
</head>
<body>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <!--Sidebar content-->
            <ul id="clientList" class="nav nav-list" style="overflow: auto;position: relative;height: 600px;">

            </ul>
        </div>
        <div class="span9">
            <!--Body content-->
            <div class="hero-unit">
                <fieldset>
                    <legend><%= user.username %></legend>
                    <span class="help-block">ApiKey:<span style="padding-left: 1em" id="pushApiKey"><%= user.accessToken%></span></span>
                    <span class="help-block">server status: <span id="pushMsgTip" class="text-success"></span> </span>
                </fieldset>

            </div>
            <div class="row-fluid input-prepend input-append">
                <fieldset>
                    <span class="add-on">@</span>
                    <input class="input-xlarge" id="pushClient" value="all" type="text"  disabled />
                    <button class="btn btn-info" type="button"
                            onclick="pushMsgToClient({title: $('#pushMsgTitle').val(),msg:$('#pushMsg').val()}, $('#pushApiKey').text(), $('#pushClient').val())">
                        Push!
                    </button>
                </fieldset>
            </div>
            <fieldset>
                <label>Message Title</label>
                <input type="text" id="pushMsgTitle" placeholder="message title">
                <label>Message Context</label>
                <textarea rows="9" id="pushMsg" style="width: 100%;" placeholder="message body"></textarea>
            </fieldset>
        </div>
    </div>
</div>


<p id="password" style="visibility: hidden"><%=user.password%></p>

<p id="userId" style="visibility: hidden"><%=user.id%></p>
<% include ./common/bodyFooter%>
</body>
</html>